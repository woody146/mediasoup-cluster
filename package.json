{
  "name": "mediasoup-cluster",
  "version": "1.2.0",
  "description": "Mediasoup cluster",
  "scripts": {
    "build:static:producer": "browserify static/slave_producer/lib.js -p esmify -o static/slave_producer/lib.bundle.js",
    "build": "tsc && npm run build:static:producer",
    "release": "standard-version",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:master": "cross-env PORT=3010 node dist/run_master.js",
    "start:slave:producer": "cross-env PORT=3011 SLAVE_FOR=producer node dist/run_slave.js",
    "start:slave:consumer": "cross-env PORT=3012 SLAVE_FOR=consumer node dist/run_slave.js",
    "dev": "npm run start:slave:producer",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woody146/mediasoup-cluster.git"
  },
  "author": "woody146",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/woody146/mediasoup-cluster/issues"
  },
  "homepage": "https://github.com/woody146/mediasoup-cluster#readme",
  "files": [
    "dist"
  ],
  "keywords": [
    "mediasoup",
    "webrtc",
    "cluster"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "browserify": "^17.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esmify": "^2.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@fastify/static": "^6.10.2",
    "dotenv": "^16.1.4",
    "fastify": "^4.17.0",
    "mediasoup": "^3.12.3",
    "mediasoup-client": "^3.6.89",
    "node-fetch": "^3.3.1",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.16"
  }
}
